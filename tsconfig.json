{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "ignoreDeprecations": "6.0"
  },
  "include": [
    "tests/**/*.ts",
    "features/**/*.ts",
    "steps/**/*.ts",
    "pages/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
